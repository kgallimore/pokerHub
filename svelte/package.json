{
	"name": "pocketsvelte",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "concurrently --kill-others \"npx vite dev\" \"npm run pocket:serve\"",
		"build": "vite build & cd ../comm && npm run build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"pocket": "cd pb && go run main.go serve",
		"pocket:build": "cd pb && go env -w CGO_ENABLED=0 && go build",
		"pocket:serve": "cd pb && ./pocketbase serve",
		"types": "npx pocketbase-typegen --db ./pb/pb_data/data.db --out src/lib/pocketbase-types.ts",
		"seed": "tsx --env-file=.env seed.ts",
		"prod": "pm2 startOrRestart pm2.json",
		"prod:restart": "pm2 restart pocketSvelte & pm2 restart pocketComm",
		"prod:stop": "pm2 stop pocketSvelte & pm2 stop pocketComm"
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "^5.2.0",
		"@sveltejs/kit": "^2.5.18",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@threlte/core": "^8.0.0-next.12",
		"@threlte/extras": "^9.0.0-next.19",
		"@types/bun": "^1.1.6",
		"@types/eslint": "^8.56.10",
		"@types/express": "^4.17.21",
		"@types/node": "^20.14.11",
		"@types/three": "^0.166.0",
		"autoprefixer": "^10.4.19",
		"concurrently": "^8.2.2",
		"daisyui": "^4.12.10",
		"dotenv": "^16.4.5",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.42.0",
		"globals": "^15.8.0",
		"pocketbase": "^0.21.3",
		"postcss": "^8.4.39",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.6",
		"svelte": "^5.0.0-next.191",
		"svelte-check": "^3.8.4",
		"tailwindcss": "^3.4.6",
		"tailwindcss-3d": "^1.0.6",
		"three": "^0.166.1",
		"tslib": "^2.6.3",
		"tsx": "^4.16.2",
		"typescript": "^5.5.3",
		"typescript-eslint": "^8.0.0-alpha.45",
		"vite": "^5.3.4"
	},
	"type": "module",
	"dependencies": {
		"hyper-express": "^6.16.4",
		"pm2": "^5.4.2"
	}
}
